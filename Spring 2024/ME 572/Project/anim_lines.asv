function anim_lines(lines)
    amt_sl = size(lines, 1) % amount of streamlines
    a = zeros(amt_sl, 1)
    % for i = 1 : amt_sl
    %     a(i) = animatedline('Color',[0 .7 .7]);
    % end
    a = arrayfun(@(x) animatedline(), amt_sl:1)
    % axis([0 20 -1 1])
    % x = linspace(0,20,10000);
    len = size(lines(1).XData, 2)
    for k = 1 : len
        % first line
        addpoints(a(k),lines(k).XData(1,k),lines(k).YData(1,k));
    
        % update screen
        drawnow limitrate
    end
end